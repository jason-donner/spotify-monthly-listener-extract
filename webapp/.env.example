# Spotify API Configuration
# Get these from https://developer.spotify.com/dashboard/
SPOTIPY_CLIENT_ID=your_spotify_client_id_here
SPOTIPY_CLIENT_SECRET=your_spotify_client_secret_here
SPOTIPY_REDIRECT_URI=http://localhost:5000/admin/callback

# Flask Configuration
FLASK_SECRET_KEY=your-super-secret-key-for-production-use
FLASK_DEBUG=false

# Admin Authentication
ADMIN_PASSWORD=your_secure_admin_password_here

# ChromeDriver Path (adjust for your system)
# Windows: C:\Windows\System32\chromedriver.exe
# Linux/Docker: /usr/bin/chromedriver
# macOS: /usr/local/bin/chromedriver
CHROMEDRIVER_PATH=C:\Windows\System32\chromedriver.exe

# Optional: Logging Configuration
LOG_LEVEL=INFO
LOG_TO_STDOUT=true

# Optional: Port Configuration (for deployment)
PORT=5000
HOST=127.0.0.1
