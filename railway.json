{
  "build": {
    "commands": [
      "cd webapp && pip install -r requirements.txt"
    ]
  },
  "deploy": {
    "startCommand": "cd webapp && gunicorn app:app --workers 2 --threads 2 --timeout 60 --bind 0.0.0.0:$PORT",
    "healthcheckPath": "/",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 3
  }
}
